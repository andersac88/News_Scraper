   {{#each articles}}
  <div class="card m-5">
    <div class="row card-header text-white bg-primary mx-0">
      <div class="col-sm-10">{{this.title}}</div>
      <div class="col-sm-1"><button class="btn btn-light btn-sm view" data-id={{this._id}} type="button">View Notes</button></div>
      <div class="col-sm-1"><button class="btn btn-danger btn-sm note" data-title="{{this.title}}" data-id={{this._id}} type="button">Add Notes</button></div>
    </div> 
    <div class="card-body">
      <p class="card-text">{{this.content}}</p>
    </div>
    <div class="card-footer text-center">URL: <a href="{{this.link}}">{{this.link}}</a></div>
</div>
{{else}}
  <div class="card m-5 text-center">
    <div class="row card-header text-white bg-danger mx-0">
      <div class="col-sm-12">There aren't any notes on this article.</div>
    </div> 
</div>
 {{/each}}

 <!-- Note Modal -->
 <div class="modal fade" id="noteModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document" aria-hidden="true">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title title"></h5>
      </div>
      <div class="modal-body">
       <form>
         <div class="form-group">
            <label for="modalTitle">Title</label>
            <textarea class="form-control" id="modalTitle" rows="1"></textarea>
        </div>
        <div class="form-group">
          <label for="modalBody">Body</label>
          <textarea class="form-control" id="modalBody" rows="3"></textarea>
        </div>
      <button type="submit" class="btn btn-primary buttonID">Submit</button>
         </form>
      </div>
    </div>
  </div>
</div>

